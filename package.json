{
  "name": "@vinceau/slp-wii-connect",
  "description": "Library for connecting to the Slippi Wii network interface",
  "license": "LGPL-3.0-or-later",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vinceau/slp-wii-connect.git"
  },
  "bugs": {
    "url": "https://github.com/vinceau/slp-wii-connect/issues"
  },
  "homepage": "https://github.com/vinceau/slp-wii-connect#readme",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --verbose --passWithNoTests",
    "coverage": "yarn run test -- --coverage",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "lint": "eslint \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prebuild": "yarn run clean",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "prepublishOnly": "yarn run lint && yarn run test && yarn run build",
    "postpublish": "git push origin master --follow-tags",
    "build": "rollup -c",
    "watch": "rollup -cw",
    "docs": "yarn typedoc && touch docs/.nojekyll"
  },
  "jest": {
    "testRegex": "/test/.*",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@shelacek/ubjson": "^1.0.1",
    "lodash": "^4.17.11",
    "strict-event-emitter-types": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.3",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.3.0",
    "jest": "^24.9.0",
    "open-cli": "^5.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.20.3",
    "rollup-plugin-typescript2": "^0.24.0",
    "ts-jest": "^24.0.2",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.2"
  }
}